<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/alarmImage"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_alarms" />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/alarmImage"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="@string/morning_alarm"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/alarmSummaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/alarmText"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/alarmImage"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:text="@string/set_morning_alarm" />

</RelativeLayout>